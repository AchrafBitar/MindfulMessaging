{
  "manifest_version": 3,
  "name": "Mindful Messaging Assistant",
  "version": "1.0.0",
  "description": "AI-powered message analysis and reply suggestions for mindful communication across all messaging platforms.",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://mail.google.com/*",
    "https://*.messenger.com/*",
    "https://web.telegram.org/*",
    "https://app.slack.com/*",
    "https://*.facebook.com/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "action": {
    "default_title": "Mindful Assistant",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*",
        "https://mail.google.com/*",
        "https://*.messenger.com/*",
        "https://web.telegram.org/*",
        "https://app.slack.com/*",
        "https://*.facebook.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}